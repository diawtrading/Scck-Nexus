# COPY THIS FILE TO .env AND UPDATE VALUES FOR PRODUCTION

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# Database Configuration
# ============================================
DB_PATH=./data/scck_erp.db
DB_TYPE=sqlite

# ============================================
# Security & Authentication
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-to-random-32-chars
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ENABLED=true

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_TIMEOUT=24h

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=combined

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=csv,xlsx,pdf,doc,docx

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@scck.com

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# ============================================
# Performance
# ============================================
DATABASE_POOL_SIZE=5
API_TIMEOUT=30000
CACHE_TTL=3600000

# ============================================
# Feature Flags
# ============================================
ENABLE_API_DOCS=false
ENABLE_DEMO_ACCOUNTS=true
ENABLE_EXPORTS=true
ENABLE_ADVANCED_ANALYTICS=true

# ============================================
# Monitoring & Analytics
# ============================================
SENTRY_DSN=
DATADOG_API_KEY=
ENABLE_METRICS=true

# ============================================
# Multi-tenancy (optional)
# ============================================
MULTI_TENANT_ENABLED=false
TENANT_ID=default
